@model List<HEPDataModel.GetItemListProcedure1_Result>


<style type="text/css">
    products-table {
        border: 1pt solid gray;
    }

    th {
        background-color: #ffffff;
        color: #000000;
    }

    td {
        color: #000000;
    }
    
    .stripe1 {
        background-color: #eeeef2;
    }

    .stripe2 {
        background-color: #cccedb;
    }

    .highlight {
        background-color: #eeeef2;
        font-weight: bold;
    }
</style>

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#checkAll").click(function () {
            $("input[name='productIdCheckbox']").attr("checked", this.checked);
        });
    });

    $(function () {
        $("#products tr:even").addClass("stripe1");
        $("#products tr:odd").addClass("stripe2");

        //$("#products tr").hover(function () {
        //    $(this).toggleClass("highlight");
        //}, function () {
        //    $(this).toggleClass("highlight");
        //});
    });
</script>

@{
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

@section Sidebar
    {
    <h3>Здесь будет дерево категорий</h3>
}

<h3>Прайс лист запчастей</h3>
    <table id="products" class="products-table" border="1">
        <tr>
            <th><input type="checkbox" id="checkAll" /></th>
            <th width ="60">
                Марка
            </th>
            <th width="80">
                Модель
            </th>
            <th>
                Категория
            </th>
            <th>
                Наименование запчасти
            </th>
            <th>
                Оригинальный номер
            </th>
            <th>
                Цена
            </th>
            <th>
                Производитель
            </th>
            <th>
                В наличии
            </th>
            <th>

            </th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7">Соответствий не найдено. Измените параметры поиска.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                //var itemId = item.Id;
                <tr>
                    <td>
                        @*<input type="checkbox" name="productIdCheckbox" value="@item.Id">*@
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>                
                    <td>
                        @Html.DisplayFor(modelItem => item.ModelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td width="400">
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OEMCode)
                    </td>
                    <td width="80">
                        @item.CostNative.ToString("c")
                        @*@Html.DisplayFor(modelItem => item.CostNative)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ManufacturerName)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.IsAvailable, "IsAvailable")
                    </td>
                    <td>
                        @*@Html.ActionLink("Добавить в корзину", "AddToCart", new { id = item.Id })*@
                        @using (Html.BeginForm("AddToCart", "Cart")) {
                            <div class="pull-right">
                                @Html.Hidden("id", item.Id)
                                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                                <input type="submit" class="btn btn-success" value="Добавить в корзину"/>
                            </div>
                            
                        }
                    </td>
                </tr>
            }
        }
    </table>


