@model IEnumerable<HEPDataModel.GetItemResult_Result>

<style type="text/css">
    products-table {
        border: 1pt solid gray;
    }

    th {
        background-color: #ffffff;
        color: #000000;
    }

    td {
        color: #000000;
    }
    
    .stripe1 {
        background-color: #eeeef2;
    }

    .stripe2 {
        background-color: #cccedb;
    }

    .highlight {
        background-color: #eeeef2;
        font-weight: bold;
    }
</style>

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#checkAll").click(function () {
            $("input[name='productIdCheckbox']").attr("checked", this.checked);
        });
    });

    $(function () {
        $("#products tr:even").addClass("stripe1");
        $("#products tr:odd").addClass("stripe2");

        $("#products tr").hover(function () {
            $(this).toggleClass("highlight");
        }, function () {
            $(this).toggleClass("highlight");
        });
    });
</script>

@{
    ViewBag.Title = "Product Catalogue";
    Layout = "~/Views/Shared/_LayoutWithSidebar.cshtml";
}

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

@section Sidebar
    {
    <h3>There will be a treeview here!</h3>
}

<h3>Product Catalogue</h3>
<div>
    <table id="products" class="products-table" border="1">
        <tr>
            <th><input type="checkbox" id="checkAll" /></th>
            <th>
                Brand
            </th>
            <th>
                Type
                @*@Html.DisplayNameFor(model => model.First().TypeName)*@
            </th>
            <th>
                Model
            </th>
            <th>
                Category
            </th>
            <th>
                Part Name
            </th>
            <th>
                Catalogue Number
            </th>
            <th>
                Country
            </th>

            <th>Details</th>
        </tr>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7">No rows match search criteria</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td><input type="checkbox" name="productIdCheckbox" value="@item.Id"></td>

                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CatalogNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryName)
                    </td>

                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </table>
</div>


